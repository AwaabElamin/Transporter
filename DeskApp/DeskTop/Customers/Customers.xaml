                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <Button x:Name="btnCustomerPhoneNumberFilter" Content="Go" HorizontalAlignment="Right" Click="btnCustomerPhoneNumberFilter_Click"/>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
