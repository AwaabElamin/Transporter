                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <TextBox x:Name="txtCustomerEmailFilter" Width="140" HorizontalAlignment="Left"/>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <Button x:Name="btnCustomerEmailFilter" Content="Go" HorizontalAlignment="Right" Click="btnCustomerEmailFilter_Click"/>
                                    </Grid>
                                </Grid>
                            </Grid>

