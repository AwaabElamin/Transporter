<Page x:Class="DeskTop.Customers.Customers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeskTop.Customers"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto" FontSize="18"
      Title="Customers" Loaded="Page_Loaded">
    <Canvas x:Name ="CanMainCustomer" Visibility="Visible" HorizontalAlignment="Left"  
            Height="auto" Width="auto">
        <Grid x:Name="GridMainCustomer" Visibility="Visible" HorizontalAlignment="Center"
              Width="auto" Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TabControl x:Name="TabCustomers" Visibility="Visible" Height="auto" Width="auto">
                    <!--each tab can present many items-->
                    <TabItem x:Name="TabViewCustomer" FontWeight="Bold" Background="#fff8e3" Foreground="#2e3137" BorderThickness="2,2,1,1" GotFocus="TabViewCustomer_GotFocus">
                        <TabItem.Effect>
                            <DropShadowEffect/>
                        </TabItem.Effect>
                        <!--Tab header allow us to give the header more details-->
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <!--<Ellipse Width="10" Height="10" Fill="DarkGray"/>-->
                                <TextBlock >All Customers</TextBlock>
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <TabItem x:Name="TabAddCustomer" FontWeight="Bold" Background="#fff8e3" Foreground="#2e3137" BorderThickness="2,2,1,1" GotFocus="TabAddCustomer_GotFocus">
                        <TabItem.Effect>
                            <DropShadowEffect/>
                        </TabItem.Effect>
                        <!--Tab header allow us to give the header more details-->
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <!--<Ellipse Width="10" Height="10" Fill="DarkGray"/>-->
                                <TextBlock>Add A Customer</TextBlock>
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <TabItem x:Name="TabEditCustomer"  FontWeight="Bold" Background="#fff8e3" Foreground="#2e3137" BorderThickness="2,2,1,1" GotFocus="TabEditCustomer_GotFocus">
                        <TabItem.Effect>
                            <DropShadowEffect/>
                        </TabItem.Effect>
                        <!--Tab header allow us to give the header more details-->
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <!--<Ellipse Width="10" Height="10" Fill="DarkGray"/>-->
                                <TextBlock>Edit A Customer</TextBlock>
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <TabItem x:Name="TabDeactiveCustomers"  FontWeight="Bold" Background="#fff8e3" Foreground="#2e3137" BorderThickness="2,2,1,1" GotFocus="TabDeactiveCustomers_GotFocus">
                        <TabItem.Effect>
                            <DropShadowEffect/>
                        </TabItem.Effect>
                        <!--Tab header allow us to give the header more details-->
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <!--<Ellipse Width="10" Height="10" Fill="DarkGray"/>-->
                                <TextBlock>Deactive Customers</TextBlock>
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <!--<TabItem x:Name="TabAddCustomer5"  FontWeight="Bold" Background="#fff8e3" Foreground="#2e3137" BorderThickness="2,2,1,1">
                <TabItem.Effect>
                    <DropShadowEffect/>
                </TabItem.Effect>
                -->
                    <!--Tab header allow us to give the header more details-->
                    <!--
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        -->
                    <!--<Ellipse Width="10" Height="10" Fill="DarkGray"/>-->
                    <!--
                        <TextBlock>Add A Customer</TextBlock>
                    </StackPanel>
                </TabItem.Header>

            </TabItem>-->
                </TabControl>
            </Grid>
            <Grid Grid.Row="1">
                <!--we distribute the convas to Tabs, each tab represent feature or page-->

