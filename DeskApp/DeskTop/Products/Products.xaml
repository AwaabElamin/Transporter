<Page x:Class="DeskTop.Products.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeskTop.Products"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products" Loaded="Page_Loaded">


        <Canvas x:Name="CanProducts" >
            <Grid Width="750" Height="450">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>



                <DataGrid x:Name="dgAdoptionApplicationsAappointmentsList" Grid.Row="1" Grid.Column="1" SelectionMode="Single" 
                              IsReadOnly="True"/>

                <Button Content=" Open" Name="btnOpen" Grid.Column="1" Grid.Row="2" Margin="0 0 0 100"
                            HorizontalAlignment="Right" Width="100" Height="30" Click="btnOpen_Click"/>
              
            </Grid>
        </Canvas>
  


</Page>
